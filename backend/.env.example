# Server Configuration
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001

# Azure SQL Database
DB_SERVER=your-server.database.windows.net
DB_NAME=TimesheetDB
DB_USER=sqladmin
DB_PASSWORD=your-password
DB_ENCRYPT=true
DB_TRUST_SERVER_CERTIFICATE=false

# Microsoft Entra ID / Azure AD
TENANT_ID=your-tenant-id
CLIENT_ID=your-client-id
CLIENT_SECRET=your-client-secret
AUTHORITY=https://login.microsoftonline.com/your-tenant-id

# Microsoft Graph API
GRAPH_API_ENDPOINT=https://graph.microsoft.com/v1.0
GRAPH_API_SCOPES=https://graph.microsoft.com/.default

# Azure Communication Services (Email)
ACS_CONNECTION_STRING=your-acs-connection-string
ACS_SENDER_ADDRESS=noreply@miravistalabs.com
ACS_REPLY_TO_ADDRESS=timesheets@miravistalabs.com

# Security
JWT_SECRET=your-jwt-secret-min-32-chars
SESSION_SECRET=your-session-secret
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Feature Flags
ENABLE_PAYCHEX_SYNC=false
ENABLE_DIGITAL_SIGNAGE=true
ENABLE_GAMIFICATION=true

# Paychex API (Future)
PAYCHEX_API_URL=https://api.paychex.com
PAYCHEX_CLIENT_ID=your-paychex-client-id
PAYCHEX_CLIENT_SECRET=your-paychex-secret

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Azure Key Vault (Production)
KEY_VAULT_URL=https://kv-timesheet-prod.vault.azure.net/

# Role-Based Security Groups (Entra ID)
# These groups determine user roles during sync
# Users in multiple groups get the highest-priority role
# Priority: TimesheetAdmin > Leadership > ProjectAdmin > AuditReviewer > Manager > Employee
ENTRA_GROUP_TIMESHEET_ADMIN=SG-MVD-Timesheet-TimesheetAdmin
ENTRA_GROUP_LEADERSHIP=SG-MVD-Timesheet-Leadership
ENTRA_GROUP_PROJECT_ADMIN=SG-MVD-Timesheet-ProjectAdmin
ENTRA_GROUP_AUDIT_REVIEWER=SG-MVD-Timesheet-AuditReviewer

# Legacy: Leadership Group ID (deprecated - use ENTRA_GROUP_LEADERSHIP instead)
LEADERSHIP_GROUP_ID=your-entra-id-group-object-id

# Work Week Pattern Groups (Entra ID Security Groups)
# Users in SG-MVD-Timesheet-WorkWeekTS get Tuesday-Saturday schedule
# All other users default to Monday-Friday schedule
ENTRA_GROUP_WORKWEEK_MF=SG-MVD-Timesheet-WorkWeekMF
ENTRA_GROUP_WORKWEEK_TS=SG-MVD-Timesheet-WorkWeekTS

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_TIMEOUT_HOURS=8
