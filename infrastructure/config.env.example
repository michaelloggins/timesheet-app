###############################################################################
# TimeSheet Timesheet - Azure Configuration
#
# IMPORTANT: Copy this file to config.env and fill in all values before running deployment script
# DO NOT commit config.env with sensitive values to source control
###############################################################################

# Azure Subscription & Location
LOCATION="centralus"
OWNER="IT-1100"

# Resource Naming
RESOURCE_GROUP="rg-MVD-TimeSheet"
SQL_SERVER_NAME="sql-MVD-TimeSheet-prod"          # Must be globally unique
SQL_DATABASE_NAME="MVD-TimesheetDB"
KEY_VAULT_NAME="kv-MVD-TimeSheet-prod"            # Must be globally unique, 3-24 chars
APP_SERVICE_PLAN="plan-MVD-TimeSheet-prod"
BACKEND_APP_NAME="api-MVD-TimeSheet-timesheet"    # Must be globally unique
FRONTEND_APP_NAME="app-MVD-TimeSheet-timesheet"   # Must be globally unique
FUNCTIONS_APP_NAME="func-MVD-TimeSheet-jobs"      # Must be globally unique
STORAGE_ACCOUNT_NAME="saMVDTimeSheettimeseet"   # Must be globally unique, lowercase, no hyphens
ACS_NAME="acs-MVD-TimeSheet-prod"
APP_INSIGHTS_NAME="ai-MVD-TimeSheet-prod"

# Database Configuration
SQL_ADMIN_USER="sqladmin"
SQL_ADMIN_PASSWORD="CHANGE_THIS_PASSWORD"   # CHANGE THIS - Min 8 chars, complex

# Microsoft Entra ID Configuration
# Get these from Azure Portal > Entra ID > App Registrations
# App Registration Name: app-MVD-TimeSheetApp
TENANT_ID="your-tenant-id-here"
CLIENT_ID="your-client-id-here"
CLIENT_SECRET="your-client-secret-here"       # Get from Azure Portal > App Registrations > Certificates & secrets

# Email Configuration
ACS_SENDER_ADDRESS="noreply@yourdomain.com"

###############################################################################
# VALIDATION RULES
# - Resource names must be globally unique
# - SQL password must be at least 8 characters with complexity requirements
# - Storage account name must be 3-24 lowercase letters and numbers only
# - Key Vault name must be 3-24 characters (alphanumeric and hyphens)
###############################################################################
